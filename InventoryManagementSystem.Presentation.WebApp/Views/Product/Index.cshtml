
@model List<Inventory.Presentaion.App.ViewModel.IndexProductVM>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .page-title {
        font-size: 2rem; /* Larger font size */
        font-weight: bold;
        color: #3a6ea5; /* Custom color */
        margin-bottom: 1rem; /* Spacing below title */
        text-align: center; /* Center the title */
        text-transform: uppercase; /* Make title uppercase */
        border-bottom: 2px solid #3a6ea5; /* Adds an underline effect */
        padding-bottom: 0.5rem; /* Space between title text and underline */
    }
</style>

<h2 class="page-title">Products</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Supplier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.SupplierName</td>
                <td>
                    <a asp-action="Details" asp-route-productID="@item.ProductID" class="btn btn-info">Details</a> |
                    <a asp-action="Edit" asp-route-productID="@item.ProductID" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-productID="@item.ProductID" class="btn btn-danger">Delete</a> |
                    <a asp-action="Restock" asp-route-productID="@item.ProductID" class="btn btn-info">Restock</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>
