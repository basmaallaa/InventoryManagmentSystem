
@model Inventory.Presentation.App.ViewModel.OrderDetailsViewModel

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order Details</h2>

<div>
    <p><strong>Order ID:</strong> @Model.OrderID</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Customer Name:</strong> @Model.CustomerName</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<h3>Products in this Order</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Quantity</td>
                <td>@product.Price</td>
                <td>@(product.Quantity * product.Price)</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Order/Index" class="btn btn-primary">Back to Orders</a>