@model List<IndexCustomerVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using Inventory.Presentaion.App.ViewModel;
}

<style>
    .page-title {
        font-size: 2rem; /* Larger font size */
        font-weight: bold;
        color: #3a6ea5; /* Custom color */
        margin-bottom: 1rem; /* Spacing below title */
        text-align: center; /* Center the title */
        text-transform: uppercase; /* Make title uppercase */
        border-bottom: 2px solid #3a6ea5; /* Adds an underline effect */
        padding-bottom: 0.5rem; /* Space between title text and underline */
    }
</style>

<h2 class="page-title">Customers</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark" >
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>
                    <a href="@Url.Action("UpdateCustomer", "Customer", new { customerID = customer.CustomerID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteCustomer", "Customer", new { customerID = customer.CustomerID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddCustomer", "Customer")" class="btn btn-success">Add New Customer</a>
